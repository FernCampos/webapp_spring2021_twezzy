<!doctype html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Twezzy</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <link href="/assets/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://unpkg.com/vue@next"></script>
</head>

<body class="d-flex h-100 text-center text-white default-background">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <img class="float-md-start mb-0" src="/images/twezzylogo.svg" alt="twezzy logo" height=60 width=60>
                <h1 class="float-md-start mb-0">Twezzy</h1>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <% if(loggedIn) { %>
                    <a class="nav-link" href="/home">Home</a>
                    <% } else{ %>
                    <a class="nav-link" href="/home">Home</a>
                    <% } %>
                    <a class="nav-link" href="/signup">Sign up</a>
                    <a class="nav-link" href="/feed">Feed</a>
                    <a class="nav-link" href = "/users">Users Page</a>
                </nav>
            </div>
            <div class="login">
                <% if(loggedIn){ %>
                    <p>Logged in as <a href="<%= `/users/${currentUser._id}`%>">
                            <%= currentUser.fullname %>
                        </a>
                        <p class="log-out">
                            <a href="/logout">Log out</a>
                        </p>
                    </p>
                    <% } else{ %>
                        <a href="/login">Log in</a>
                        <% } %>
            </div>
        </header>
        <div class="flashes">
            <% if(flashMessages){ %>
                <% if(flashMessages.success){ %>
                    <div class="flash success">
                        <%= flashMessages.success %>
                    </div>
                    <% } else if(flashMessages.error){ %>
                        <div class="flash error">
                            <%= flashMessages.error %>
                        </div>
                        <% } %>
                            <% } %>
        </div>
        <%- body%>


            <footer class="mt-auto text-white-50">
                <p>&copy; 2021 <a href="/" class="text-white">Tweezy</a></p>
            </footer>
    </div>
    <script src="/assets/dist/js/signup.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/signup.js"></script>
</body>

</html>