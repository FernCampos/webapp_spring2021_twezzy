<div class="container">
    <div class="row">
        <div class="col usertwez">
            <!--Profile image-->
            <div>
                <img class="defaultprofile" src="/images/feather.png" alt="default profile picture">
            </div>
            <!--Profile information-->
            <div>
                <div>
                    <%= user.name.first + " " + user.name.last %>
                </div>
                <div>
                    <%= user.userName %>
                </div>
                <div>
                    <%= user.description %>
                </div>
                <div>
                    Twez Count
                </div>
            </div>
            <div>Who to Follow</div>
            <div>Trends</div>

        </div>
        <div class="col usertwez">
            <h5>Trends</h5>
        </div>
        <div class="col usertwez">
            <h5>Who to follow</h5>
            <a href = "/users">
                Users Page
            </a>
        </div>
        <!--User Twez-->
        <% if(typeof usersposts !== "undefined"){ %>
            <% usersposts.forEach(item => { %>
        <div class="col-md-12 usertwez">
            <div>
                <img class="defaultprofile" src="/images/feather.png" alt="default profile picture">
            </div>
            <div>
                <%= user.userName %>
            </div>
            <div>
                <p><%= item.text %></p>
            </div>
            <form>
                <div class="btn-box-actions">
                    <button type="button">Comment</button>
                    <button type="button">Like</button>
                    <button type="button">Dislike</button>
                </div>
            </form>
        </div>
        <% }) %>
        <% } %>
    </div>
</div>